public static void StatusClientConnected()
{
    if (_clientsConnected.Count == 0)
    {
        Console.WriteLine("Nenhum cliente conectado.");
        return;
    }

    int selectedIndex = 0;
    
    ConsoleKey key;
    do
    {
        Console.Clear(); // Limpa a tela a cada interação
        Console.WriteLine("Selecione um cliente:\n");

        for (int i = 0; i < _clientsConnected.Count; i++)
        {
            if (i == selectedIndex)
            {
                Console.ForegroundColor = ConsoleColor.Green; // Destaca o item selecionado
                Console.WriteLine($"> {i + 1}. IP: {_clientsConnected[i].Ip} | SO: {_clientsConnected[i].SO}");
                Console.ResetColor();
            }
            else
            {
                Console.WriteLine($"  {i + 1}. IP: {_clientsConnected[i].Ip} | SO: {_clientsConnected[i].SO}");
            }
        }

        key = Console.ReadKey(true).Key; // Captura a tecla pressionada sem exibir no console

        switch (key)
        {
            case ConsoleKey.UpArrow:
                selectedIndex = (selectedIndex == 0) ? _clientsConnected.Count - 1 : selectedIndex - 1;
                break;
            case ConsoleKey.DownArrow:
                selectedIndex = (selectedIndex == _clientsConnected.Count - 1) ? 0 : selectedIndex + 1;
                break;
        }

    } while (key != ConsoleKey.Enter);

    Console.Clear();
    var selectedClient = _clientsConnected[selectedIndex];
    Console.WriteLine($"Cliente Selecionado: \nIP: {selectedClient.Ip} \nSistema Operacional: {selectedClient.SO}");
}
